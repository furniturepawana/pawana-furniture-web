              <option value="general">General Inquiry</option>
              <option value="custom">Custom Furniture Design</option>
              <option value="quote">Request a Quote</option>
              <option value="service">Service Request</option>
              <option value="feedback">Feedback</option>
              <option value="other">Other</option>
            </select>
          </div>

          <div class="form-group">
            <label for="message">Message *</label>
            <textarea id="message" name="Message" rows="6" required placeholder="Tell us about your project or inquiry..."></textarea>
          </div>

          <button type="submit" class="btn-primary" id="contactSubmitBtn">
            <span class="btn-text">Send Message</span>
            <span class="spinner"></span>
