            <label for="email">Email Address *</label>
            <input type="email" id="email" name="Email_Address" required placeholder="rohan@example.com">
          </div>

          <div class="form-group">
            <label for="phone">Phone Number</label>
            <input type="tel" id="phone" name="Phone_Number" placeholder="+91 94XX5 X2XX1">
          </div>

