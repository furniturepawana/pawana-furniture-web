<section class="hero">
  <div class="hero-content">
    <span class="hero-badge">Workshop In Rajpura</span>
    <h1>Furniture You Can Trust.</h1>
    <div class="hero-actions">
      <a href="/contact" class="btn-primary">Start Your Custom Order</a>
      <a href="/catalogue" class="btn-secondary">Explore Collection</a>
    </div>
    <div class="hero-stats">
      <div class="stat">
        <span class="stat-number">15+</span>
        <span class="stat-label">Years Crafting</span>
      </div>
      <div class="stat">
        <span class="stat-number">200+</span>
        <span class="stat-label">Custom Pieces</span>
      </div>
      <div class="stat">
        <span class="stat-number">100%</span>
        <span class="stat-label">Handmade</span>
      </div>
    </div>
  </div>
  </section>



 <section class="featured">
  <h2>Our Signature Pieces</h2>
  <div class="product-grid">
    <% featuredItems.forEach(item => { %>
      <div class="product-card">
        <a href="/item/<%= item.slug %>">
          <img src="<%= item.images[0]?.url || '/images/placeholder.jpg' %>" alt="<%= item.name %>" />
          <h3><%= item.name %></h3>
          <div class="product-card-meta">
            <span class="item-style-badge <%= item.style.toLowerCase() %>"><%= item.style %></span>
            <p><%= item.type %> · <%= item.room %></p>
          </div>
        </a>
      </div>
    <% }) %>
  </div>
</section>

<section class="carousel-section">
  <div class="carousel-header">
    <h2>A Quick Look At Our Offerings</h2>
    <div class="category-controls">
      <nav class="category-nav">
        <button class="category-tab active" data-category="items">Items</button>
        <button class="category-tab" data-category="sets">Sets</button>
      </nav>
    </div>
  </div>

  <div class="carousel-wrapper">
    <button class="carousel-arrow carousel-prev" aria-label="Previous product">‹</button>
    <div class="carousel-container">
      <div class="carousel-track" id="carousel-track">
        <!-- Items -->
        <% carouselItems.forEach(item => { %>
          <div class="carousel-item active-category" data-category="items">
            <a href="/item/<%= item.slug %>">
              <img src="<%= item.images[0]?.url || '/images/placeholder.jpg' %>" alt="<%= item.name %>">
              <h4><%= item.name %></h4>
              <p><%= item.style %> · <%= item.room %></p>
            </a>
          </div>
        <% }) %>
        <!-- View All Items Card -->
        <div class="carousel-item active-category view-all-card" data-category="items">
          <a href="/catalogue?type=item" class="view-all-link">
            <div class="view-all-content">
              <span class="view-all-icon">→</span>
              <span>View All Items</span>
            </div>
          </a>
        </div>

        <!-- Sets -->
        <% carouselSets.forEach(set => { %>
          <div class="carousel-item" data-category="sets">
            <a href="/set/<%= set.slug %>">
              <img src="<%= set.images[0]?.url || '/images/placeholder.jpg' %>" alt="<%= set.name %>">
              <h4><%= set.name %></h4>
              <p><%= set.style %> · <%= set.room %></p>
            </a>
          </div>
        <% }) %>
        <!-- View All Sets Card -->
        <div class="carousel-item view-all-card" data-category="sets">
          <a href="/catalogue?type=set" class="view-all-link">
            <div class="view-all-content">
              <span class="view-all-icon">→</span>
              <span>View All Sets</span>
            </div>
          </a>
        </div>
      </div>
      <div class="carousel-scrollbar"><div class="carousel-thumb"></div></div>
    </div>
    <button class="carousel-arrow carousel-next" aria-label="Next product">›</button>
  </div>
</section>



<!-- Browse by Rooms Section -->
<section class="browse-rooms-section">
  <div class="browse-rooms-container">
    <h2>Browse by Rooms</h2>
    <p class="browse-rooms-subtitle">Explore our curated collections for every space in your home</p>

    <div class="rooms-grid">
      <% rooms.forEach(room => { %>
        <div class="room-card">
          <a href="/room/<%= room.slug %>">
            <div class="room-image">
              <img src="<%= room.images[0]?.url || '/images/placeholder.jpg' %>" alt="<%= room.name %>">
              <div class="room-overlay">
                <span class="room-name"><%= room.name %></span>
                <span class="room-arrow">→</span>
              </div>
            </div>
          </a>
        </div>
      <% }); %>
    </div>
  </div>
</section>



