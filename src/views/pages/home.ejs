<section class="hero">
  <div class="hero-content">
    <span class="hero-badge">Workshop In Rajpura</span>
    <h1>Furniture You Can Trust.</h1>
    <div class="hero-actions">
      <a href="/contact" class="btn-primary">Start Your Custom Order</a>
      <a href="/catalogue" class="btn-secondary">Explore Collection</a>
    </div>
    <div class="hero-stats">
      <div class="stat">
        <span class="stat-number">15+</span>
        <span class="stat-label">Years Crafting</span>
      </div>
      <div class="stat">
        <span class="stat-number">200+</span>
        <span class="stat-label">Custom Pieces</span>
      </div>
      <div class="stat">
        <span class="stat-number">100%</span>
        <span class="stat-label">Handmade</span>
      </div>
    </div>
  </div>
</section>

<!-- Signature Pieces Carousel -->
<section class="home-carousel">
  <div class="section-container">
    <div class="carousel-header">
      <h2 class="section-title">Our Signature Pieces</h2>
      <div class="carousel-nav">
        <button class="carousel-arrow carousel-prev" data-carousel="signature" aria-label="Previous">‹</button>
        <button class="carousel-arrow carousel-next" data-carousel="signature" aria-label="Next">›</button>
      </div>
    </div>
    <div class="carousel-wrapper">
      <div class="carousel-container">
        <div class="carousel-track" id="signature-carousel-track">
          <% featuredItems.forEach(item => { %>
          <div class="carousel-item active-category" data-category="signature">
            <a href="/item/<%= item.slug %>">
              <img src="<%= item.images[0]?.url || '/images/placeholder.jpg' %>" alt="<%= item.name %>">
              <h3><%= item.name %></h3>
              <p><%= item.style %> · <%= item.room %></p>
            </a>
          </div>
          <% }) %>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Featured Items Carousel -->
<section class="home-carousel">
  <div class="section-container">
    <div class="carousel-header">
      <h2 class="section-title">Featured Items</h2>
      <div class="carousel-nav">
        <button class="carousel-arrow carousel-prev" data-carousel="items" aria-label="Previous">‹</button>
        <button class="carousel-arrow carousel-next" data-carousel="items" aria-label="Next">›</button>
      </div>
    </div>
    <div class="carousel-wrapper">
      <div class="carousel-container">
        <div class="carousel-track" id="items-carousel-track">
          <% carouselItems.forEach(item => { %>
          <div class="carousel-item active-category" data-category="items">
            <a href="/item/<%= item.slug %>">
              <img src="<%= item.images[0]?.url || '/images/placeholder.jpg' %>" alt="<%= item.name %>">
              <h4><%= item.name %></h4>
              <p><%= item.style %> · <%= item.room %></p>
            </a>
          </div>
          <% }) %>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Featured Sets Carousel -->
<section class="home-carousel">
  <div class="section-container">
    <div class="carousel-header">
      <h2 class="section-title">Featured Sets</h2>
      <div class="carousel-nav">
        <button class="carousel-arrow carousel-prev" data-carousel="sets" aria-label="Previous">‹</button>
        <button class="carousel-arrow carousel-next" data-carousel="sets" aria-label="Next">›</button>
      </div>
    </div>
    <div class="carousel-wrapper">
      <div class="carousel-container">
        <div class="carousel-track" id="sets-carousel-track">
          <% carouselSets.forEach(set => { %>
          <div class="carousel-item active-category" data-category="sets">
            <a href="/set/<%= set.slug %>">
              <img src="<%= set.images[0]?.url || '/images/placeholder.jpg' %>" alt="<%= set.name %>">
              <h4><%= set.name %></h4>
              <p><%= set.style %> · <%= set.room %></p>
            </a>
          </div>
          <% }) %>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Browse by Rooms -->
<section class="browse-rooms">
  <div class="section-container">
    <h2 class="section-title">Browse by Rooms</h2>
    <p class="browse-rooms-subtitle">Explore our curated collections for every space in your home</p>
    <div class="rooms-grid">
      <% rooms.forEach(room => { %>
      <a href="/room/<%= room.slug %>" class="room-card">
        <div class="room-image">
          <img src="<%= room.images[0]?.url || '/images/placeholder.jpg' %>" alt="<%= room.name %>">
        </div>
        <span class="room-name"><%= room.name %></span>
      </a>
      <% }); %>
    </div>
  </div>
</section>



<!-- Custom Order -->
<section class="custom-order">
  <div class="section-container">
    <div class="custom-order-content">
      <h2>Ready to Start Your Custom Order?</h2>
      <p>Tell us what you have in mind, and we'll help bring your vision to life.</p>
      <form class="custom-order-form" action="/contact/submit" method="POST">
        <div class="form-group">
          <input type="text" name="name" placeholder="Your Name" required>
        </div>
        <div class="form-group">
          <input type="tel" name="phone" placeholder="Contact Number" required>
        </div>
        <div class="form-group">
          <textarea name="message" placeholder="Briefly describe your enquiry..." rows="1" required></textarea>
        </div>
        <button type="submit" class="btn-submit">Request Callback</button>
      </form>
    </div>
  </div>
</section>
