<script>
// Home page form submission handler
document.getElementById('homeContactForm').addEventListener('submit', function() {
  const form = this;
  const submitBtn = document.getElementById('homeSubmitBtn');
  const successMessage = document.getElementById('homeSuccessMessage');
  const whatsappOption = document.getElementById('homeWhatsappOption');
  const iframe = document.getElementById('homeFormTarget');

  // Show loading state
  submitBtn.classList.add('loading');

  // Listen for iframe load (form submission complete)
  iframe.onload = function() {
    if (submitBtn.classList.contains('loading')) {
      // Hide form and WhatsApp option, show success
      form.style.display = 'none';
      whatsappOption.style.display = 'none';
      successMessage.classList.add('show');

      // Reset after 10 seconds
      setTimeout(() => {
        successMessage.classList.remove('show');
        form.style.display = 'flex';
        whatsappOption.style.display = 'flex';
        form.reset();
        submitBtn.classList.remove('loading');
      }, 10000);
    }
  };
});
</script>
